// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conta {
  id         Int         @id @default(autoincrement())
  createDate DateTime?   @default(now()) @db.Timestamp(0)
  endDate    DateTime?   @default(now()) @db.Timestamp(0)
  balance    Int
  transacao  Transacao[]
}

model Transacao {
  id               Int         @id @default(autoincrement())
  createDate       DateTime?   @default(now()) @db.Timestamp(0)
  paymenDate       DateTime?   @default(now()) @db.Timestamp(0)
  valor            Decimal     @db.Decimal(10, 2)
  comentario       String?
  formaDePagamento String
  pago             String
  contatos         Contato[]
  categorias       Categoria[]
  conta            Conta?       @relation(fields: [contaId], references: [id])
  contaId          Int
}

model Categoria {
  id            Int       @id @default(autoincrement())
  createDate    DateTime? @default(now()) @db.Timestamp(0)
  endDate       DateTime? @default(now()) @db.Timestamp(0)
  tipoTransacao String
  recorrencia   String
  contato       Contato[]
  transacoes    Transacao @relation(fields: [transacaoId], references: [id])
  transacaoId   Int
}

model Contato {
  id        Int         @id @default(autoincrement())
  creatDate DateTime?   @default(now()) @db.Timestamp(0)
  endDate   DateTime?   @default(now()) @db.Timestamp(0)
  nome      String?
  tel       String?
  transacao Transacao[]
  categoria Categoria[]
}
