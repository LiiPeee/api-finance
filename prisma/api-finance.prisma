generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transacao {
  id            Int         @id  @default(autoincrement())
  createDate    DateTime?    @default(now()) @db.Timestamp(0)
  endDate       DateTime?    @default(now()) @db.Timestamp(0)
  valor         Decimal   
  comentario    String?
  formaDePagmnt String
  pago          String
  contato       Contato[]
  categoria     Categoria[]
}

model Categoria {
  id            Int       @id @default(autoincrement())
  createDate    DateTime?  @default(now()) @db.Timestamp(0)
  endDate       DateTime?  @default(now()) @db.Timestamp(0)
  tipoDeDespesa String
  contato       Contato[]
  transacao     Transacao @relation(fields: [transacaoId], references: [id])
  transacaoId   Int
} 

model Contato {
  id          Int         @id @default(autoincrement())
  creatDate   DateTime?    @default(now()) @db.Timestamp(0)
  endDate     DateTime?    @default(now()) @db.Timestamp(0)
  nome        String?
  tel         String?
  transacao   Transacao[]
  categoria   Categoria[]
}
