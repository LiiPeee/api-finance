generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transacao {
  id            Int         @id @unique @default(autoincrement())
  createDate    DateTime
  endDate       DateTime
  valor         String
  comentario    String?
  formaDePagmnt String
  pago          String
  contato       Contato[]
  categoria     Categoria[]
}

model Categoria {
  id            Int       @id @default(autoincrement())
  createDate    DateTime
  endDate       DateTime
  tipoDeDespesa String[]
  contato       Contato[]
  contatoId     Int       @unique
  transacao     Transacao @relation(fields: [transacaoId], references: [id])
  transacaoId   Int
}

model Contato {
  id          Int       @id @default(autoincrement())
  creatDate   DateTime
  endDate     DateTime
  nome        String
  tel         String
  transacao Transacao[]
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId Int
}
